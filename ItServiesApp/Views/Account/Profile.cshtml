@model UserProfileViewModel
@{
    ViewBag.Title = $"{Model.Name} {Model.Surname} Profil Sayfası";
}
<partial name="Partials/_PageTitlePartial" />

<section class="shoping-checkout-area section-gap">
    <div class="container">
        <form asp-controller="Account" asp-action="Profile" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="billing-details">
                        <h3 class="title">profil Bilgileri</h3>
                        <div class="row">

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <<label asp-for="Email"></label>
                                    <input asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Surname"></label>
                                    <input asp-for="Surname" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="payment-box" mt-30>
                                    <input type="submit" class="main-btn" value="Güncelle" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
@section Styles
{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding: 0 15px;
        }
    </style>
}