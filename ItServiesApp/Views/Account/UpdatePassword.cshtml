@model PasswordChangeViewModel
@{
    ViewBag.Title = $" Şifre Yenileme Sayfası";
}
}
<partial name="Partials/_PageTitlePartial" />
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <form asp-controller="Account" asp-action="Password" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="billing-details">
                        <h3 class="title">Şifre Yenileme İşlemi</h3>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <<label asp-for="OldPassword"></label>
                                    <input  asp-for="OldPassword" />
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input  asp-for="NewPassword" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input  asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="payment-box" mt-30>
                                    <input type="submit" class="main-btn" value="Değiştir" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
@section Styles
{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding: 0 15px;
        }
    </style>
}
